<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QualApe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainButtonPrimary">
        <item name="enabledColor">@color/wine</item>
        <item name="enabledTextColor">@color/white</item>
        <item name="disabledColor">@color/grey</item>
        <item name="disabledTextColor">@color/white</item>
        <item name="corner">30dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainButtonSecondary">
        <item name="enabledColor">@color/white</item>
        <item name="enabledTextColor">@color/grey</item>
        <item name="disabledColor">@color/grey</item>
        <item name="disabledTextColor">@color/white</item>
        <item name="corner">30dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/grey</item>
    </style>

    <style name="MainEditTextPrimary">
        <item name="mainColor">@color/grey</item>
        <item name="strokeWidth">1dp</item>
        <item name="corner">30dp</item>
    </style>

    <style name="Header">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">32sp</item>
    </style>
</resources>