<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxWidth="320dp"
    android:minWidth="320dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="16dp"
    android:layout_marginEnd="52dp"
    android:paddingStart="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewProduct"
        android:layout_width="74dp"
        android:layout_height="74dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/mock_image"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewProductType"
        android:layout_marginStart="16dp"
        tools:text="Doce"
        android:layout_width="wrap_content"
        android:textColor="@color/light_grey"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/imageViewProduct"
        app:layout_constraintTop_toTopOf="@+id/imageViewProduct" />

    <TextView
        android:id="@+id/textViewProductName"
        style="@style/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Bolo de pote enorme muito grande e gostoso"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewProductType"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/textViewProductType"
        />

    <TextView
        android:id="@+id/textViewProductValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="R$ 19,90"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewProductName"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/textViewProductName"
        />

</androidx.constraintlayout.widget.ConstraintLayout>